# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL="postgresql://username:password@localhost:5432/ticket_system"
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ticket_system
POSTGRES_USER=username
POSTGRES_PASSWORD=your_secure_password

# ========================================
# CONFIGURAÇÕES DO NEXT.JS
# ========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here_min_32_chars

# ========================================
# CONFIGURAÇÕES DO SUPABASE
# ========================================
# Use a URL completa da sua instância Supabase (ex.: http://localhost:54321 ao self-hosting)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ========================================
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars

# ========================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@ticketsystem.com

# ========================================
# CONFIGURAÇÕES DE ARQUIVOS
# ========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB em bytes

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000 # 15 minutos em ms
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ========================================
# CONFIGURAÇÕES DE AMBIENTE
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# CONFIGURAÇÕES DE CACHE (OPCIONAL)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO (OPCIONAL)
# ========================================
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# ========================================
# CONFIGURAÇÕES DE API EXTERNA (OPCIONAL)
# ========================================
# Exemplo para integração com sistemas externos
EXTERNAL_API_URL=https://api.external-system.com
EXTERNAL_API_KEY=your_external_api_key 
