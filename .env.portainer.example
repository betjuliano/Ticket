# ========================================
# CONFIGURAÇÃO PARA DEPLOY NO PORTAINER
# ========================================
# Copie este arquivo para .env.portainer e ajuste as configurações

# Domínios da aplicação
DOMAIN=iadm.iaprojetos.com.br
TRAEFIK_DOMAIN=traefik.iaprojetos.com.br
NEXTAUTH_URL=https://iadm.iaprojetos.com.br

# Email para certificados ACME/Let's Encrypt
ACME_EMAIL=admjulianoo@gmail.com

# Banco de dados PostgreSQL
DATABASE_URL=postgresql://tickets_user:CHANGE_PASSWORD@postgres:5432/tickets_db
POSTGRES_PASSWORD=CHANGE_PASSWORD

# Redis Cache
REDIS_URL=redis://:CHANGE_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_PASSWORD

# NextAuth Secret (OBRIGATÓRIO: gerar novo em produção)
NEXTAUTH_SECRET=CHANGE_TO_RANDOM_SECRET_KEY

# Configurações SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admjulianoo@gmail.com
SMTP_PASS=CHANGE_TO_GMAIL_APP_PASSWORD

# Upload de arquivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Logs
LOG_LEVEL=info

# Cache TTL
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# Metadados da aplicação
APP_NAME=Sistema de Tickets
APP_VERSION=1.0.0
APP_ENV=production

